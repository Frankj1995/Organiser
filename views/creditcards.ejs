<%- include('partials/header') %>

<header class='nav-header'>
  <img class="nav-image" src="https://cdn.pixabay.com/photo/2016/11/27/21/42/stock-1863880_1280.jpg" alt="">
  <h1 class='logo'>Card Manager</h1>
  <input type="checkbox" id="nav-toggle" class="nav-toggle">
  <nav>
    <ul>
      <li><a href="/passwords">Home</a></li>
      <li><a href="/creditcards">Credit Cards</a></li>
      <li><a href="/onlineaccounts">Online Acconts</a></li>
      <li><a href="/bills">Bills</a></li>
    </ul>
  </nav>
  <label for="nav-toggle" class="nav-toggle-label"><span></span></label>
</header>

<section class="cc-content">
  <h1 class="cc-header">Manage Cards</h1>
  <div class="cc-management">

    <form class="cc-form" action="/creditcards" method="post">
      <h5>Card Credentials</h5>
      <label for="card-provider">Card Provider</label>
      <input id="card-provider" type="text" name="card_provider">
      <label for="account-holder">Account Holder</label>
      <input id="account-holder" type="text" name="account_holder">
      <label for="card-number">Card Number</label>
      <input id="card-number" type="text" name="card_number">
      <label for="expiry-date">Expiry Date</label>
      <input id="expiry-date" type="text" name="expiry_date"">
      <label for=" security-code">Security Code</label>
      <input id="security-code" type="text" name="security_code">
      <label for="pin">Pin</label>
      <input id="pin" type="text" name="pin">
      <button class="btn btn-secondary btn-sm" type="sumbit" name="button">Sumbit Details</button>
      <!-- <button id="delete-btn" class="btn btn-secondary btn-sm" type="button" name="button">Delete Card</button> -->
    </form>
    <table class="cc-table">
      <tr>
        <th>Card Provider</th>
        <th>Account Holder</th>
        <th>Card Number</th>
        <th>Expiry Date</th>
        <th>Security Code</th>
        <th>Pin</th>
        <th>Delete Item</th>
      </tr>
      <% cardItems.forEach(function(item){ %>
      <tr>
        <td>
          <%= item.card_provider %>
        </td>
        <td>
          <%= item.account_holder %>
        </td>
        <td>
          <%= item.card_number %>
        </td>
        <td>
          <%= item.expiry_date %>
        </td>
        <td>
          <%= item.security_code %>
        </td>
        <td>
          <%= item.pin %>
        </td>
        <td class="btn-center">
          <button id="delete-btn" class="delete-btn" type="submit" name="button">Delete</button>
        </td>
      </tr>
      <% }); %>
    </table>
  </div>
</section>

<div class="cc-modal">
  <div class="modal-content">
    <div class="close">
      +
    </div>
    <img class="trash-img" src="https://images.techhive.com/images/article/2013/01/trash_big-100021876-orig.jpg" alt="trash icon">
    <div class="delete-content">
      <form class="" action="/ccdelete" method="post">
        <input type="text" name="identifier" value="" placeholder="Enter CSC">
        <input type="text" name="username" placeholder="Username">
        <input type="password" name="password" placeholder="Password">
        <button id="trash-btn" class="btn btn-outline-dark btn-sm trash-btn" type="submit" name="button">Delete</button>
      </form>
    </div>
  </div>
</div>



<%- include('partials/footer') %>
